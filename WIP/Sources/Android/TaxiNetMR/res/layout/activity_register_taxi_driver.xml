<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/account_of_taxi_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/account_of_taxi_driver_value"
        android:layout_alignTop="@id/account_of_taxi_driver_value"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="@string/account" />

    <EditText
        android:id="@id/account_of_taxi_driver_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/account_of_taxi_driver"
        android:hint="@string/password_hint" />

</RelativeLayout>