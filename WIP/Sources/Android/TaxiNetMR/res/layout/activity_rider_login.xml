<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rider_login_email"
        android:layout_alignRight="@+id/btn_rider_login"
        android:ems="10" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rider_login_password"
        android:layout_alignLeft="@+id/editText2"
        android:ems="10" />

    <TextView
        android:id="@+id/rider_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rider_login_password"
        android:layout_alignParentTop="true"
        android:layout_marginTop="179dp"
        android:text="@string/email" />

    <TextView
        android:id="@+id/rider_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rider_login_email"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/editText1"
        android:text="@string/password" />

    <Button
        android:id="@+id/btn_rider_login"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/rider_login" />

    <Button
        android:id="@+id/btn_rider_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_rider_login"
        android:layout_below="@+id/btn_rider_login"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/btn_rider_forgot_password"
        android:text="@string/rider_register" />

    <Button
        android:id="@+id/btn_rider_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_rider_register"
        android:layout_alignBottom="@+id/btn_rider_register"
        android:layout_alignRight="@+id/btn_rider_login"
        android:text="@string/rider_forgot_password" />

</RelativeLayout>