<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/edt_rider_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rider_login_email"
        android:layout_alignRight="@+id/btn_rider_login"
        android:ems="10" />

    <EditText
        android:id="@+id/edt_rider_register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rider_login_password"
        android:layout_alignLeft="@+id/edt_rider_register_password"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/rider_login_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rider_login_password"
        android:layout_alignParentTop="true"
        android:layout_marginTop="179dp"
        android:text="@string/email" />

    <TextView
        android:id="@+id/rider_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rider_login_email"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/edt_rider_register_email"
        android:text="@string/password" />

    <Button
        android:id="@+id/btn_rider_login"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_rider_register_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Login" />

    <Button
        android:id="@+id/btn_rider_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_rider_login"
        android:layout_below="@+id/btn_rider_login"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/btn_rider_forgot_password"
        android:text="Register" />

    <Button
        android:id="@+id/btn_rider_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_rider_register"
        android:layout_alignBottom="@+id/btn_rider_register"
        android:layout_alignRight="@+id/btn_rider_login"
        android:text="Forgot Password" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/common_signin_btn_text_focus_dark" />

</RelativeLayout>