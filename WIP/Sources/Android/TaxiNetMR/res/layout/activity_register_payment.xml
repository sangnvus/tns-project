<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/common_signin_btn_text_pressed_dark" />

    <TextView
        android:id="@+id/card_number"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView1"
        android:background="@drawable/boder"
        android:padding="10dp"
        android:text="Card Number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_rider_register_payment_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/card_number"
        android:layout_below="@+id/card_number"
        android:text="Add" />

    <Button
        android:id="@+id/btn_rider_register_payment_cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_rider_register_payment_register"
        android:layout_alignRight="@+id/btn_rider_register_payment_term"
        android:layout_toRightOf="@+id/btn_rider_register_payment_register"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="31dp"
        android:text="Payment Detail"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_menu_upload" />

    <Button
        android:id="@+id/btn_rider_register_payment_register"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/btn_rider_register_payment_add"
        android:layout_marginTop="86dp"
        android:text="@string/rider_register" />

    <Button
        android:id="@+id/btn_rider_register_payment_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_rider_register_payment_register"
        android:layout_alignRight="@+id/btn_rider_register_payment_add"
        android:layout_below="@+id/btn_rider_register_payment_cancel"
        android:text="Term" />

</RelativeLayout>
