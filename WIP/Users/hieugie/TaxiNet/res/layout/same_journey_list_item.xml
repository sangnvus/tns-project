<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_selector" >

    <RelativeLayout
        android:id="@+id/call_history_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/list_selector" >

        <ImageView
            android:id="@+id/call_history_icon"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/desc_list_item_icon"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/name_of_taxi_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/call_history_icon"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/call_history_icon"
            android:paddingRight="40dp"
            android:text="@string/driver"
            android:textColor="@color/list_item_title"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/starting_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_of_taxi_driver"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/call_history_icon"
            android:text="@string/starting_point"
            android:textColor="@color/list_item_title"
            android:textSize="12sp" />

        <TextView
            android:id="@id/stopping_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/starting_point"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/call_history_icon"
            android:text="@string/stopping_point"
            android:textColor="@color/list_item_title"
            android:textSize="12sp" />

        <Button
            android:id="@+id/call"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/call_icon"
            android:textColor="@color/counter_text_color" />
    </RelativeLayout>

</RelativeLayout>